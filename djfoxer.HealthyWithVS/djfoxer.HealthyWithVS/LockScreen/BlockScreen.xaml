<Window x:Class="djfoxer.HealthyWithVS.LockScreen.BlockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:djfoxer.HealthyWithVS.LockScreen"
        mc:Ignorable="d"
        Closing="Window_Closing"
        AllowsTransparency="True"
        Cursor="None" WindowStyle="None" ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="Gray"/>
    </Window.Background>
    <StackPanel Orientation="Vertical">
        <Image Name="WorkoutImage" Source="/djfoxer.HealthyWithVS;component/Resources/workout1.png"></Image>
    </StackPanel>
</Window>
